@page "/edit-asp-net-role-claim"
@attribute [Authorize]

<PageTitle>Edit AspNetRoleClaim</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AspNetRoleClaim</RadzenAlert>
        <RadzenTemplateForm TItem="DESKTOPJN6V6MTSQLEXPRESS.Models.FinalDB.AspNetRoleClaim" Data="@(aspNetRoleClaim)" Visible="@(aspNetRoleClaim != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Claim Type" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(aspNetRoleClaim.ClaimType)" Name="ClaimType" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Claim Value" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(aspNetRoleClaim.ClaimValue)" Name="ClaimValue" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Role" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@(aspNetRolesForRoleId)" TextProperty="Id" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@(aspNetRoleClaim.RoleId)" Name="RoleId"
                           />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

